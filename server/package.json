{
  "name": "server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "node --loader ts-node/esm src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint .",
    "migrate": "node --loader ts-node/esm db/migrate.ts",
    "test": "jest",
    "test:all": "jest",
    "test:unit": "jest src/app.test.ts",
    "test:models": "jest src/models",
    "test:user": "jest src/models/user.test.ts",
    "test:e2e": "jest --config jest.e2e.config.js",
    "test:setup": "yarn setup:test-db && yarn create:test-users",
    "test:cleanup": "yarn cleanup:test-users",
    "setup:test-db": "node --loader ts-node/esm src/scripts/setup-test-db.ts",
    "create:test-users": "node --loader ts-node/esm src/scripts/create-test-users.ts",
    "cleanup:test-users": "node --loader ts-node/esm src/scripts/cleanup-test-users.ts"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "email-validator": "^2.0.4",
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "socket.io": "^4.7.4",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/email-validator": "^1.0.32",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.20",
    "@types/pg": "^8.11.10",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "eslint": "^9.0.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
